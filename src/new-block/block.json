{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "gravatar/block",
	"version": "0.2.0",
	"title": "Gravatar Profile",
	"description": "Display user information directly from Gravatar Public Profiles.",
	"category": "widgets",
	"keywords": [
		"gravatar",
		"profile",
		"author",
		"user",
		"avatar",
		"card"
	],
	"attributes": {
		"userType": {
			"type": "string",
			"default": "author"
		},
		"userEmail": {
			"type": "string",
			"default": ""
		},
		"deletedElements": {
			"type": "object",
			"default": {}
		}
	},
	"supports": {
        "html": false,
		"color": {
			"text": true,
			"background": true,
			"gradients": true
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true
		},
		"shadow": true,
		"spacing": {
			"margin": true
		}
    },
	"textdomain": "gravatar-enhanced",
	"render": "file:./render.php",
	"editorScript": "file:../new-block.js",
	"viewStyle": "file:../style-block-view.css",
	"style": "file:../style-block-shared.css",
	"editorStyle": "file:../style-block-edit.css",
	"viewScript": "file:../new-block-view.js"
}
