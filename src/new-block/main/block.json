{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "gravatar/new-block",
	"version": "0.1.0",
	"title": "Gravatar Card",
	"description": "Display user information directly from Gravatar Public Profiles.",
	"category": "widgets",
	"keywords": [
		"gravatar",
		"profile",
		"author",
		"user",
		"avatar",
		"card"
	],
	"attributes": {
		"userType": {
			"type": "string",
			"default": "author"
		},
		"userValue": {
			"type": "string",
			"default": ""
		}
	},
	"supports": {
        "html": false,
		"spacing": {
			"margin": true,
			"padding": true
		}
    },
	"textdomain": "gravatar-enhanced",
	"editorScript": "file:../../new-block.js",
	"editorStyle": "file:../../style-new-block.css"
}
